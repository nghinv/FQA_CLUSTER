    <system-properties>
        <!-- eXo Platform comes with different runtime profiles, enabling you to customize which modules you want to enable/disable. (Default: all) -->
        <property name="exo.profiles" value="all"/>

        <!-- Location of configuration files -->
        <property name="exo.conf.dir" value="${jboss.server.config.dir}/gatein"/>

        <!-- Location of data -->
        <property name="exo.data.dir" value="${jboss.server.data.dir}/gatein"/>
        <!-- JCR Data directory -->
        <property name="exo.jcr.data.dir" value="${exo.data.dir}/jcr"/>
        <!-- JCR values -->
        <property name="exo.jcr.storage.data.dir" value="${exo.jcr.data.dir}/values"/>
        <!-- JCR indexes -->
        <property name="exo.jcr.index.data.dir" value="${exo.jcr.data.dir}/index"/>

        <!-- Disable WebSockets on JBoss EAP 6.2 -->
        <property name="exo.cometd.transports" value="org.cometd.server.transport.JSONTransport,org.cometd.server.transport.JSONPTransport"/>

        <!-- XML Factory -->
        <property name="javax.xml.stream.XMLInputFactory" value="com.sun.xml.internal.stream.XMLInputFactoryImpl"/>
    </system-properties>
    <management>
        <security-realms>
            <security-realm name="ManagementRealm">
                <authentication>
                    <local default-user="$local"/>
                    <properties path="mgmt-users.properties" relative-to="jboss.server.config.dir"/>
                </authentication>
                <authorization map-groups-to-roles="false">
                    <properties path="mgmt-groups.properties" relative-to="jboss.server.config.dir"/>
                </authorization>
            </security-realm>
            <security-realm name="ApplicationRealm">
                <authentication>
                    <local default-user="$local" allowed-users="*"/>
                    <properties path="application-users.properties" relative-to="jboss.server.config.dir"/>
                </authentication>
                <authorization>
                    <properties path="application-roles.properties" relative-to="jboss.server.config.dir"/>
                </authorization>
            </security-realm>
        </security-realms>
        <audit-log>
            <formatters>
                <json-formatter name="json-formatter"/>
            </formatters>
            <handlers>
                <file-handler name="file" formatter="json-formatter" relative-to="jboss.server.data.dir" path="audit-log.log"/>
            </handlers>
            <logger log-boot="true" log-read-only="false" enabled="false">
                <handlers>
                    <handler name="file"/>
                </handlers>
            </logger>
        </audit-log>
        <management-interfaces>
            <native-interface security-realm="ManagementRealm">
                <socket-binding native="management-native"/>
            </native-interface>
            <http-interface security-realm="ManagementRealm">
                <socket-binding http="management-http"/>
            </http-interface>
        </management-interfaces>
        <access-control provider="simple">
            <role-mapping>
                <role name="SuperUser">
                    <include>
                        <user name="$local"/>
                    </include>
                </role>
            </role-mapping>
        </access-control>
    </management>
